datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  moods    MoodLog[]
}

model MoodLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  emotion   String
  message   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
